import rospy
import rospkg
from moveit_python import MoveGroupInterface
from moveit_msgs.msg import MoveItErrorCodes
from kinova_action_clients.gripper_action_client import GripperActionClient

if __name__ == "__main__":
    rospy.init_node('home_tuck_repeat')
    
    move_group = MoveGroupInterface("upper_body","base_link")
    move_group.setPlannerId("RRTConnectkConfigDefault")
    rgripper = GripperActionClient('right')
    
    joints = ["right_elbow_joint",
              "right_shoulder_lift_joint",
              "right_shoulder_pan_joint",
              "right_wrist_1_joint",
              "right_wrist_2_joint",
              "right_wrist_3_joint",
              "pan_joint",
              "tilt_joint"]
   
    # This is not simulation so need to adjust gripper parameters
    gripper_closed = 0.0
    gripper_open = 0.165
    
    tucked = [2.6,2.238,1.6225,0.2417,-0.6559,1.7261,0.0,0.0]
    homed = [1.764,0.0833,1.482,2.042,-1.463,1.880,0.0,0.0]
    
    pan_tilt_pos = [[1.0,0.17],[-1.0,-0.34],[0.0,0.0]]
    idx=0
    
    while not rospy.is_shutdown():
        tucked[6] = pan_tilt_pos[idx][0]
        tucked[7] = pan_tilt_pos[idx][1]
        idx+=1
        if (idx > 2):
            idx=0
        homed[6] = pan_tilt_pos[idx][0]
        homed[7] = pan_tilt_pos[idx][1]
        idx+=1
        if (idx > 2):
            idx=0
        
        success=False
        while not rospy.is_shutdown() and not success:
            result = move_group.moveToJointPosition(joints, tucked, 0.1)
            if result.error_code.val == MoveItErrorCodes.SUCCESS:
                success=True
        rgripper.command(gripper_closed)
        
        success=False
        while not rospy.is_shutdown() and not success:
            result = move_group.moveToJointPosition(joints, homed, 0.1)
            if result.error_code.val == MoveItErrorCodes.SUCCESS:
                success=True
        rgripper.command(gripper_open)
        rgripper.command(gripper_closed)

